// tsconfig.json

{
  "compilerOptions": {
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "types": ["node", "vitest/globals"],
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*.ts", "tests/server/**/*.test.ts"],
  "exclude": ["node_modules", "tests/metrics/"]
}
