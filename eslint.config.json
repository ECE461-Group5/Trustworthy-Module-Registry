{
  "extends": ["eslint:recommended"],
  "overrides": [
    {
      "files": ["**/*.ts", "**/*.tsx"],
      "env": {
        "node": true,
        "es2021": true
      },
      "parser": "@typescript-eslint/parser",
      "plugins": ["@typescript-eslint"],
      "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
      }
    }
  ]
}
