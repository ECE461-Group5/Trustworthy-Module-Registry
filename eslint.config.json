{
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "env": {
    "node": true,
    "es2021": true
  },
  "overrides": [
    {
      "files": ["*.js"],
      "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "single"]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "@typescript-eslint/explicit-module-boundary-types": "warn"
      }
    }
  ]
}
