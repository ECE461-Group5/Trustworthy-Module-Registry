{
  "name": "backend",
  "private": true,
  "version": "3.0.0",
  "type": "module",
  "scripts": {
    "build": "npx tsc -p ./tsconfig.compile.json",
    "start": "node dist/src/server/server.js",
    "dev": "nodemon",
    "db": "npx prisma studio",
    "test": "npx vitest && node -e \"const fs = require('fs'); const path = './src/utils/reports/coverage/coverage-summary.json'; if (fs.existsSync(path)) { const summary = JSON.parse(fs.readFileSync(path, 'utf8')); const lines = summary.total.lines; const percent = ((lines.covered / lines.total) * 100).toFixed(2); console.log('Lines Covered: ' + percent + '%'); } else { console.log('Coverage report not found.'); }\"",
    "auto-grader-test": "vitest run --silent --coverage --reporter=json --outputFile=./src/utils/reports/vitest-results.json",
    "lint": "npx eslint --fix -c eslint.config.js -f stylish",
    "format": "npx prettier . --write"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "exec": "tsc && node ./dist/src/server/server.js",
    "ext": "ts,js,json"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@stylistic/eslint-plugin-js": "^2.11.0",
    "@stylistic/eslint-plugin-ts": "^2.10.1",
    "@types/cors": "^2.8.17",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^4.17.21",
    "@types/lodash": "^4.17.13",
    "@types/markdownlint": "^0.13.0",
    "@types/node": "^22.5.4",
    "@types/node-fetch": "^2.6.11",
    "@types/pino": "^7.0.4",
    "@types/supertest": "^6.0.2",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "@vitest/coverage-v8": "^2.1.1",
    "eslint": "^9.14.0",
    "jsdoc": "^4.0.3",
    "mkdirp": "^3.0.1",
    "nodemon": "^3.1.4",
    "pino-pretty": "^11.2.2",
    "prettier": "^3.3.3",
    "prisma": "^5.22.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.13.0",
    "vitest": "^2.1.1",
    "vitest-mock-extended": "^2.0.2",
    "yaml-eslint-parser": "^1.2.3"
  },
  "dependencies": {
    "@octokit/rest": "^21.0.2",
    "@prisma/client": "^5.22.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^5.0.1",
    "fs": "^0.0.1-security",
    "isomorphic-git": "^1.27.1",
    "lodash": "^4.17.21",
    "markdownlint": "^0.35.0",
    "pino": "^9.4.0",
    "supertest": "^7.0.0",
    "util": "^0.12.5",
    "vm": "^0.1.0",
    "yargs": "^17.7.2"
  }
}
