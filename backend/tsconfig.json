// tsconfig.json

{
  "compilerOptions": {
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "types": ["node", "vitest/globals"]
  },
  "include": ["isomorphic.d.ts", "**/*.ts", "src/tests/server/**/*.test.ts"],
  "exclude": ["node_modules", "src/tests/metrics/"]
}
